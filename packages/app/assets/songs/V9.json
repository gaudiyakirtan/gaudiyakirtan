    "lines":[
      [{"w":"অশেষ","h":" ","s":{"eng":"endless"},"o":{}},{"w":"মায়াতে","h":" ","s":{"eng":"in māyā, in material things"},"o":{}},{"w":"মন","h":" ","s":{"eng":"mind"},"o":{}},{"w":"মগন","h":" ","s":{"eng":"absorbed"},"o":{}},{"w":"হইল","h":" ।","s":{"eng":"⬅1"},"o":{}}],
