    "lines":[
      [{"w":"দক্ষিণে","h":" ","s":{"eng":"on the right"},"o":{}},{"w":"নিতাইচাঁদ","h":", ","s":{"eng":"the moonlike Nityānanda Prabhu"},"o":{}},{"w":"বামে","h":" ","s":{"eng":"on the left"},"o":{}},{"w":"গদাধর","h":" ।","s":{"eng":"Gadādhara Paṇḍita"},"o":{}}],
