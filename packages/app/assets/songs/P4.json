      [{"w":"বৈষ্ণবে","h":" ","s":{"eng":"in the Vaiṣṇavas"},"o":{}},{"w":"বিশ্বাস","h":" ","s":{"eng":"faith"},"o":{}},{"w":"বৃদ্ধি","h":" ","s":{"eng":"increase"},"o":{}},{"w":"হ’ক","h":" ","s":{"eng":"may it be"},"o":{}},{"w":"প্রতিক্ষণে","h":" ॥৮॥","s":{"eng":"every + at moment"},"o":{}}]],
